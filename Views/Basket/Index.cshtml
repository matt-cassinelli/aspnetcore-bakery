@model BasketViewModel

<h3 class="my-5">
    Basket
</h3>


<div class="row gx-3">
    <div class="col-8">
        @foreach (var line in Model.Basket.Items)
        {
            <div class="card mb-2">
                <div class="row">
                    <div class="col-md-4">
                        <img src="@line.Product.ImageThumbnailUrl" class="img-fluid rounded-start p-2" alt="@line.Product.Name">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-text">@line.Amount x @line.Product.Name</h5>
                            <div class="d-flex justify-content-between">
                                <h6>@line.Product.ShortDescription</h6>
                                <h3>@line.Product.Price.ToString("c")</h3>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="col-4">
        <div class="card p-3">
            <div class="row">
                <h4 class="col">Total:</h4>
                <h4 class="col text-end">@Model.BasketTotal.ToString("c")</h4>
            </div>
            <hr />
            <div class="text-center d-grid">
                
            </div>
        </div>
    </div>
</div>