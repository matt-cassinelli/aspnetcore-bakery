@model Product

<div class="col col-md-6 col-lg-4">
    <div class="card h-100"> @*h-100 makes cards the same height*@
        <img src="@Model.ImageThumbnailUrl" class="card-img-top" alt="@Model.Name">
        <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="card-title">@Model.Name</h5>
            <a class="btn btn-primary stretched-link" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id">@Model.Price.ToString("c")</a>
        </div>
    </div>
</div>

